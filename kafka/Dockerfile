FROM docker.io/bitnami/minideb:buster

USER 0

ENV HOME="/" \
    OS_ARCH="amd64" \
    OS_FLAVOUR="debian-10" \
    OS_NAME="linux"

COPY prebuildfs /
# Install required system packages and dependencies
RUN install_packages acl ca-certificates curl gzip libc6 procps tar zlib1g
RUN . /opt/bitnami/scripts/libcomponent.sh && component_unpack "java" "11.0.11-0" --checksum 8cf28afc1090b0fec1ad841012ead25b59d2d5f4212742c3d62e6007ef57850b
RUN . /opt/bitnami/scripts/libcomponent.sh && component_unpack "gosu" "1.13.0-0" --checksum fd7257c2736164d02832dbf72e2c1ed9d875bf3e32f0988520796bc503330129
RUN . /opt/bitnami/scripts/libcomponent.sh && component_unpack "wait-for-port" "1.0.0-3" --checksum 7521d9a4f9e4e182bf32977e234026caa7b03759799868335bccb1edd8f8fd12
RUN . /opt/bitnami/scripts/libcomponent.sh && component_unpack "render-template" "1.0.0-3" --checksum 8179ad1371c9a7d897fe3b1bf53bbe763f94edafef19acad2498dd48b3674efe
RUN . /opt/bitnami/scripts/libcomponent.sh && component_unpack "kafka" "2.8.0-1" --checksum fb5c58e1d152fa21bcced3e5457bbbc8102ca0fe9c4c90c7a1b0c7e0b924b547
RUN chmod g+rwX /opt/bitnami
RUN ln -s /opt/bitnami/scripts/kafka/entrypoint.sh /entrypoint.sh
RUN ln -s /opt/bitnami/scripts/kafka/run.sh /run.sh

COPY rootfs /
RUN /opt/bitnami/scripts/kafka/postunpack.sh
ENV BITNAMI_APP_NAME="kafka" \
    BITNAMI_IMAGE_VERSION="2.8.0-debian-10-r53" \
    PATH="/opt/bitnami/java/bin:/opt/bitnami/common/bin:/opt/bitnami/kafka/bin:$PATH"

RUN export DEBIAN_FRONTEND=noninteractive && apt update && apt install -y krb5-user ldap-utils

RUN mkdir -p /bitnami/kafka/config/certs

ADD ./credentials/kafka.server.keystore.jks /bitnami/kafka/conf/certs/kafka.keystore.jks
ADD ./credentials/kafka.server.truststore.jks /bitnami/kafka/conf/certs/kafka.truststore.jks

ADD ./config/kafka_server_jaas.conf /opt/bitnami/kafka/config/kafka_jaas.conf
ADD ./config/server.properties /opt/bitnami/kafka/config/server.properties
ADD ./config/krb5.conf /etc/krb5.conf
ADD ./user /home

RUN chmod 777 /bitnami/kafka/conf/certs/kafka.keystore.jks && chmod 777 /bitnami/kafka/conf/certs/kafka.truststore.jks

EXPOSE 9092 9093

ENTRYPOINT [ "/opt/bitnami/scripts/kafka/entrypoint.sh" ]
CMD [ "/opt/bitnami/scripts/kafka/run.sh" ]


